<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESSMobile.Page.Setting"
             Title="Setting">

    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <Label x:Name="enableBiometricLabel"
                   Text="Enable Biometric Login"
                   Padding="22" FontSize="18"
                   VerticalOptions="Center"
                   BackgroundColor="LightGray"
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   IsVisible="True" />

            <Switch x:Name="Switch" 
                    IsToggled="False" Toggled="Switch_Toggled"
                    Margin="22"
                    VerticalOptions="Center" HorizontalOptions="EndAndExpand"
                    ThumbColor="White" OnColor="Green"                    
                    Grid.Row="0" Grid.Column="1"
                    IsVisible="True"
                    />
        </Grid>

    </ContentPage.Content>

</ContentPage>